{
  "manifest_version": 3,
  "name": "JumpNav: The most elegant AI chat navigator youâ€™ve ever seen.",
  "description": "A floating side-guide for ChatGPT, Gemini, and Claude. Instantly organize long threads into clickable outlines with reply previews.",
  "version": "2.0.0",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "content/namespace.js",
        "content/utils.js",
        "content/storage.js",
        "content/adapter.js",
        "content/ui-style.js",
        "content/ui.js",
        "content/core-theme.js",
        "content/core-ui-behavior.js",
        "content/core.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
