{
  "manifest_version": 3,
  "name": "ChatGPT & Gemini Quick Navigator",
  "description": "Right-side floating navigator for ChatGPT and Gemini chats, listing user prompts with reply previews and quick jump navigation.",
  "version": "0.2.0",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://cc01.plusai.io/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content/namespace.js",
        "content/utils.js",
        "content/adapter.js",
        "content/ui.js",
        "content/core.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://cc01.plusai.io/*",
    "https://gemini.google.com/*"
  ]
}
