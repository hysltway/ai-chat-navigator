{
  "manifest_version": 3,
  "name": "JumpNav: The most elegant AI chat navigator youâ€™ve ever seen.",
  "description": "A floating side-guide for ChatGPT & Gemini. Instantly organize long threads into clickable outlines with reply previews.",
  "version": "1.2.0",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content/namespace.js",
        "content/utils.js",
        "content/adapter.js",
        "content/ui.js",
        "content/core.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*"
  ]
}
