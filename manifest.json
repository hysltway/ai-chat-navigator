{
  "manifest_version": 3,
  "name": "JumpNav: The most elegant AI chat navigator youâ€™ve ever seen.",
  "description": "Floating navigator for ChatGPT,Gemini,Claude. Turn long chats into clickable prompt outlines with reply previews and one-click jump.",
  "version": "2.0.0",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "action": {
    "default_title": "JumpNav",
    "default_icon": {
      "16": "logo16.png",
      "24": "logo24.png",
      "32": "logo32.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "content/namespace.js",
        "content/utils.js",
        "content/storage.js",
        "content/adapter.js",
        "content/ui-style.js",
        "content/ui.js",
        "content/core-theme.js",
        "content/core-ui-behavior.js",
        "content/core.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
